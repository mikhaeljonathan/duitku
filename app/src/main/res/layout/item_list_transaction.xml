<?xml version="1.0" encoding="utf-8"?>

<!--Ini view untuk 1 childView dari ExpandableListView doang-->

<!--LayoutDirection ltr itu untuk
balikin ExpandableListView yang sebelumnya rtl biar panahnya
bisa di kanan-->

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_list_transaction_constraintlayout"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:layoutDirection="ltr">


    <TextView
        android:id="@+id/item_list_transaction_category_textview"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:gravity="center_vertical"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Salary" />

    <TextView
        android:id="@+id/item_list_transaction_desc_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/item_list_transaction_wallet_textview"
        app:layout_constraintStart_toEndOf="@+id/item_list_transaction_category_textview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread"
        tools:text="AYCE" />

    <TextView
        android:id="@+id/item_list_transaction_wallet_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="8dp"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_list_transaction_category_textview"
        app:layout_constraintTop_toBottomOf="@+id/item_list_transaction_desc_textview"
        tools:text="Bank Account" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/item_list_transaction_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="end"
        app:constraint_referenced_ids="item_list_transaction_wallet_textview,item_list_transaction_desc_textview"
        tools:layout_editor_absoluteX="411dp" />

    <TextView
        android:id="@+id/item_list_transaction_amount_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="32dp"
        android:gravity="end"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_list_transaction_barrier"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Rp 700.000" />

</androidx.constraintlayout.widget.ConstraintLayout>