<?xml version="1.0" encoding="utf-8"?>

<!--kurang lebih sama kek fragment_transaction_header_weekly
cuman ini akumulasi 1 tahun, bkn 1 bulan-->

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/transaction_header_monthly_constraintlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/transaction_header_monthly_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="32dp"
        android:src="@drawable/header_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/transaction_header_monthly_total_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Total this year"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/transaction_header_monthly_container"
        app:layout_constraintStart_toStartOf="@+id/transaction_header_monthly_container"
        app:layout_constraintTop_toTopOf="@+id/transaction_header_monthly_container" />

    <TextView
        android:id="@+id/transaction_header_monthly_amount_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Rp 8.000.000"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/transaction_header_monthly_container"
        app:layout_constraintStart_toStartOf="@+id/transaction_header_monthly_container"
        app:layout_constraintTop_toBottomOf="@+id/transaction_header_monthly_total_textview" />

</androidx.constraintlayout.widget.ConstraintLayout>