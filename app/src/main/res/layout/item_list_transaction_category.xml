<?xml version="1.0" encoding="utf-8"?>

<!--Penjelasannya kurang lebih sama kayak item_list_transaction_daily-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/item_list_transaction_category_constraintlayout"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:layoutDirection="ltr"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp">

    <TextView
        android:id="@+id/item_list_transaction_category_name_textview"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:textColor="@color/textLight"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/item_list_transaction_category_transactioncount_textview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Salary" />

    <TextView
        android:id="@+id/item_list_transaction_category_amount_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:textColor="@color/textDark"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Rp 7.000.000" />

    <TextView
        android:id="@+id/item_list_transaction_category_transactioncount_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/textDark"
        android:textStyle="italic"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_list_transaction_category_name_textview"
        tools:text="There are 3 transaction(s)" />

</androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/hidden_view_category"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:background="@color/colorPrimary"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>
</LinearLayout>